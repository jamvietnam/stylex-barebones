<div class="card recipe-card">

  <div class="image">

    <img alt="{{ title }}" src="{{ image }}"/>
    <div class="filter">
      <button class="btn btn-neutral btn-simple" type="button">
        <i class="fa fa-bookmark-o"></i>
        Bookmark
      </button>
      <button class="btn btn-neutral btn-simple" type="button">
        <i class="fa fa-align-left"></i>
        Read recipe
      </button>
    </div>

  </div>
