    <p class="category">{{ category }}</p>
    <a class="card-link" href="#">
      <h4 class="title">{{ title }}</h4>
    </a>

    <div class="footer">

      <div class="author">
        <a class="card-link" href="#">
          <img alt="{{ author }}." class="avatar" src="includes/gsdp/assets/img/default-avatar.png">
          <span>
            {{ author }}</span>
        </a>
      </div>
      <div class="stats pull-right">
        <i class="fa fa-clock-o"></i>
        {{ cooktime }}
      </div>

    </div>
    <hr>
    <div class="footer">
